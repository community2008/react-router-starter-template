{
  "$schema": "./node_modules/wrangler/config-schema.json",
  "name": "react-router-starter-template",
  "main": "./workers/app.ts",
  "compatibility_date": "2025-10-08",
  "compatibility_flags": ["nodejs_compat"],
  "observability": {
    "enabled": true
  },
  "upload_source_maps": true,
  "vars": {
    "VALUE_FROM_CLOUDFLARE": "Hello from Cloudflare",
    "JWT_SECRET": "your_secure_jwt_secret_key_change_in_production"
  },
  "d1_databases": [
    {
      "binding": "DB",
      "database_name": "philosophy-books-db",
      "database_id": "54ccb76d-d4c5-44ee-8cd0-f1384ef8be89",
      "preview_database_id": "54ccb76d-d4c5-44ee-8cd0-f1384ef8be89"
    }
  ],
  "r2_buckets": [
    {
      "binding": "BOOKS_BUCKET",
      "bucket_name": "philosophy-books",
      "preview_bucket_name": "philosophy-books-preview"
    }
  ]
}
